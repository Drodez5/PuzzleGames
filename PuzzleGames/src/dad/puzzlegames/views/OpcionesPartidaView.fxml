<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="vista" prefHeight="900.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="tituloOpciones" text="PuzzleGames" />
            <Label fx:id="subTituloOpciones" text="Opciones de Partida" />
         </children>
      </VBox>
   </top>
   <center>
      <GridPane hgap="10.0" prefWidth="1100.0" vgap="10.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="333.0" minWidth="10.0" prefWidth="166.0" />
          <ColumnConstraints hgrow="ALWAYS" maxWidth="496.0" minWidth="10.0" prefWidth="496.0" />
            <ColumnConstraints hgrow="ALWAYS" maxWidth="471.0" minWidth="10.0" prefWidth="398.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="58.0" minHeight="10.0" prefHeight="58.0" vgrow="NEVER" />
          <RowConstraints maxHeight="97.0" minHeight="10.0" prefHeight="97.0" vgrow="NEVER" />
          <RowConstraints maxHeight="142.0" minHeight="10.0" prefHeight="87.0" vgrow="NEVER" />
            <RowConstraints maxHeight="160.0" minHeight="10.0" prefHeight="128.0" vgrow="NEVER" />
            <RowConstraints maxHeight="173.0" minHeight="10.0" prefHeight="137.0" vgrow="NEVER" />
            <RowConstraints maxHeight="582.0" minHeight="10.0" prefHeight="230.0" vgrow="ALWAYS" />
        </rowConstraints>
         <children>
            <Label text="Tiempo(seg):" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <Label text="Nº de rondas:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <ComboBox fx:id="rondasCombo" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <ComboBox fx:id="dificultadCombo" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Seleccione dificultad:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <Label alignment="TOP_RIGHT" text="Carpeta de imagenes:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" GridPane.valignment="TOP" />
            <Label text="Nombre del jugador:" GridPane.halignment="RIGHT" />
            <TextField fx:id="nombreText" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" />
            <Spinner fx:id="tiempoSpinner" editable="true" prefHeight="31.0" prefWidth="131.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.valignment="CENTER">
               <children>
                  <Button fx:id="abrirButton" mnemonicParsing="false" text="Abrir ..." />
                  <Label fx:id="directorioLabel" alignment="CENTER" text="&lt;&lt;Directorio&gt;&gt;" />
               </children>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </HBox>
            <Label alignment="CENTER" text="Modo de juego:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <ComboBox fx:id="juegoCombo" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Button fx:id="atrasButton" mnemonicParsing="false" text="Atrás" />
            <Button fx:id="continuarButton" defaultButton="true" mnemonicParsing="false" text="Continuar" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
